@model List<LoginRegisterFromScratch.Models.ApplicationUser>
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <table class="table table-striped table-hover table-responsive">
                <thead>
                    <tr style="background: #280B45; color: #FFE98A; text-transform: uppercase">
                        <th>Photo</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Address</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
            {
                        <tr>
                            <td><img src="~/Uploads/@user.Photo" width="70" height="70" /></td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Age</td>
                            <td>@user.Address</td>
                            <td>@user.CreatedDateTime.ToLocalTime().ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>